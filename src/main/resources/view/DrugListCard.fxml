<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
            <padding>
                <Insets top="5" right="5" bottom="5" left="15" />
            </padding>
            <HBox spacing="5" alignment="CENTER_LEFT">
                <Label fx:id="id" styleClass="cell_big_label">
                    <minWidth>
                        <!-- Ensures that the label text is never truncated -->
                        <Region fx:constant="USE_PREF_SIZE" />
                    </minWidth>
                </Label>
                <Label fx:id="tradeName" text="\$tradeName" styleClass="cell_big_label" />
            </HBox>
            <Label fx:id="activeIngredient" styleClass="cell_small_label" text="\$activeIngredient" wrapText="true"/>
            <Label fx:id="direction" styleClass="cell_small_label" text="\$direction" wrapText="true" />
            <Label fx:id="purposes" styleClass="cell_small_label" text="\$purposes" wrapText="true" />
            <Label fx:id="sideEffects" styleClass="cell_small_label" text="\$sideEffects" wrapText="true" />
            <Label fx:id="storageCount" styleClass="cell_small_label" text="\$storageCount" wrapText="true" />
        </VBox>
    </GridPane>
</HBox>
